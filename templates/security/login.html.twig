{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="banner_5">
</section>

<section class="container m-t-30 m-b-30">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="d-flex flex-wrap justify-content-around">
            <h1 class="mb-3 font-weight-normal col-12 text-center">Connexion</h1>
            <div class="col-7 m-t-15 m-b-15 w-80">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="col-7 m-t-15 m-b-15 w-80">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input class="col-12" type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        </div>


        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <div class="col-12 text-center m-t-30 m-b-15">
            <button class="btn btn-guys text-end" type="submit">
                Se connecter
            </button>
        </div>

        <div class="col-12 text-center m-t-15 m-b-30">
            <a class="link-guy" href="{{ path('account_new') }}">S'inscrire</a</div>
    </form>
</section>
{% endblock %}
